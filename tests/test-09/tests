# auto
ff --auto name=foo
foo


ff --auto foo
foo


ff --auto foo or bar
foo
bar


ff --auto baz-quux
baz-quux


ff --auto name:ba
bar
baz-quux


# strict
ff --strict name=foo
foo


ff --strict foo 2>/dev/null; echo $?
12


ff --strict foo or bar 2>/dev/null; echo $?
12


ff --strict baz-quux 2>/dev/null; echo $?
11


ff --strict name:ba
bar
baz-quux


# simple
ff --simple name=foo


ff --simple foo
foo


ff --simple foo or bar


ff --simple baz-quux
baz-quux


ff --simple name:ba
