ff type=f -x echo
dir/foo
dir/bar
dir/baz



ff type=f -S -X echo
dir/bar dir/baz dir/foo



ff type=f -x echo {}
dir/foo
dir/bar
dir/baz



ff type=f -x echo {/}
foo
bar
baz



ff type=f -x echo {//}
dir
dir
dir



ff type=f -x echo {size} {/}
4 foo
4 bar
7 baz



ff type=f -x test -e {name} 2>/dev/null; echo $?
2



ff type=f -x echo a b c
a b c dir/bar
a b c dir/baz
a b c dir/foo



ff type=f -x echo a b {} c
a b dir/bar c
a b dir/baz c
a b dir/foo c



ff type=f -x echo a b {//} {/} c
a b dir bar c
a b dir baz c
a b dir foo c



ff type=f -S -X echo a b c
a b c dir/bar dir/baz dir/foo



ff type=f -S -X echo a b {} c
a b dir/bar dir/baz dir/foo c



ff type=f -S -X echo a b {//} {/} c
a b dir dir dir bar baz foo c



ff type=f -x echo {} {}.txt
dir/foo dir/foo.txt
dir/bar dir/bar.txt
dir/baz dir/baz.txt



ff type=f -x echo {/} {/}-{size}.txt
foo foo-4.txt
bar bar-4.txt
baz baz-7.txt



ff type=f -S -X echo {/} {/}-{size}.txt
bar baz foo bar-4.txt baz-7.txt foo-4.txt
